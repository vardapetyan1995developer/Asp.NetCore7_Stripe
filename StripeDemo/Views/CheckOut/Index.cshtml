@model IEnumerable<ProductEntity>

@{
    ViewData["title"] = "CheckOut";
}

<br />

<h1 class="text-center">Products</h1>

<table class="table table-responsive table-light table-bordered mt-5" style="width: 100%;">
    <thead>
        <tr>
            <th>Product Name</th>
            <th>Rate</th>
            <th>Quantity</th>
            <th>Product Image</th>
            <th>Total</th>
        </tr>
    </thead>

    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <td>@item.Product</td>
                <td>@item.Rate</td>
                <td>@item.Quantity</td>
                <td>
                    <img src="@item.ImagePath" style="width: 130px; height: 150px;" />
                </td>
                <td>@(item.Rate * item.Quantity)</td>
            </tr>
        }
    </tbody>
</table>

<br />

<p>
    <a asp-controller="CheckOut" asp-action="CheckOut">CheckOut</a>
</p>